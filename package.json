{
  "name": "roosterwars-web3-backend",
  "version": "2.0.0",
  "author": "MetaDhanaStudio",
  "description": "Web3 Backend node.js server for rooster wars",
  "license": "AGPL-3.0",
  "main": "build/src/index.js",
  "scripts": {
    "postinstall": "npm-run-all generate-types codegen tsoa husky:init",
    "script": "ts-node -r dotenv/config",
    "dev": "yarn tsoa && concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node -r dotenv/config .",
    "clean": "rimraf build/*",
    "rebuild": "npm-run-all clean tsc",
    "tsoa": "tsoa spec-and-routes",
    "generate-types": "rimraf src/providers/contracts/types; typechain --target=ethers-v5 --out-dir 'src/providers/contracts/types' 'src/providers/contracts/abis/*.json'",
    "codegen": "graphql-codegen --config codegen.yml",
    "check-types": "tsc --noEmit",
    "format": "prettier --check 'src/**/*.{js,ts,json}'",
    "format:fix": "prettier --write 'src/**/*.{js,ts,json}'",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types",
    "husky:init": "husky install",
    "husky:commit": "lint-staged",
    "husky:push": "yarn lint:fix"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.4.0",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-graphql-request": "^4.4.8",
    "@graphql-codegen/typescript-operations": "^2.4.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.36",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "concurrently": "^7.2.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.3",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.0",
    "ts-node-dev": "^2.0.0",
    "typechain": "^8.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.10.0",
    "@tsoa/runtime": "^4.1.0",
    "applicationinsights": "^2.3.3",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "ethcall": "^4.7.2",
    "ethers": "^5.6.8",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "graphql": "^16.5.0",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "=6.0.11",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.6",
    "swagger-ui-express": "^4.4.0",
    "tsoa": "^4.1.0"
  }
}
